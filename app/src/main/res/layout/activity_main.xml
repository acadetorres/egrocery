<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    >


    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topLayout"
        android:layout_width="match_parent"
        android:layout_height="288dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#CFAB8A"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Back"
            android:textColor="#FFF"
            android:layout_marginTop="51dp"
            android:layout_marginStart="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        
        <TextView
            android:id="@+id/marketText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="#FFF"
            app:layout_constraintTop_toTopOf="parent"
            android:text="Market"
            android:textSize="36sp"
            android:layout_marginTop="46dp"
            />

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/marketText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="17dp"
            app:cardCornerRadius="10dp"
            >
            <VideoView
                android:id="@+id/banner"
                android:layout_width="330dp"
                android:layout_height="155dp"
                />
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hot Deals"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@id/topLayout"
        android:textColor="#000"
        android:layout_marginTop="13dp"
        android:layout_marginStart="15dp"
        app:layout_constraintStart_toStartOf="parent"
        />

    <HorizontalScrollView
        android:id="@+id/hotDealsSection"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <androidx.cardview.widget.CardView
                android:layout_width="114dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="6dp"
                android:elevation="6dp"
                android:layout_marginStart="15dp"
                android:layout_marginBottom="10dp"
                >
                <LinearLayout
                    android:id="@+id/item1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="114dp"
                        android:src="@drawable/item1"
                        android:onClick="showProduct"
                        />

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="34dp"
                        android:textColor="#000"
                        android:text="Item Name"
                        android:textSize="14sp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:text="200 PHP"
                        />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="114dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="6dp"
                android:elevation="6dp"
                android:layout_marginStart="15dp"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="114dp"
                        />

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="34dp"
                        android:textColor="#000"
                        android:text="Item Name"
                        android:textSize="14sp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:text="200 PHP"
                        />

                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="114dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="6dp"
                android:elevation="6dp"
                android:layout_marginStart="15dp"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="114dp"
                        />

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="34dp"
                        android:textColor="#000"
                        android:text="Item Name"
                        android:textSize="14sp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:text="200 PHP"
                        />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="114dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="6dp"
                android:elevation="6dp"
                android:layout_marginStart="15dp"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="114dp"
                        android:src="@drawable/item1"
                        />

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="34dp"
                        android:textColor="#000"
                        android:text="Item Name"
                        android:textSize="14sp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:text="200 PHP"
                        />

                </LinearLayout>

            </androidx.cardview.widget.CardView>


        </LinearLayout>

    </HorizontalScrollView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textColor="#000"
                android:text="Trending"
                android:layout_marginStart="15dp"
                android:layout_marginTop="40dp"
                />

            <HorizontalScrollView
                android:id="@+id/trendingSection"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <androidx.cardview.widget.CardView
                        android:layout_width="114dp"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="6dp"
                        android:elevation="6dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginBottom="10dp"
                        >
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="114dp"
                                android:layout_height="114dp"
                                android:src="@drawable/item1"
                                />

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="34dp"
                                android:textColor="#000"
                                android:text="Item Name"
                                android:textSize="14sp"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:text="200 PHP"
                                />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="114dp"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="6dp"
                        android:elevation="6dp"
                        android:layout_marginStart="15dp"
                        >
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="114dp"
                                android:layout_height="114dp"
                                android:src="@drawable/item2"
                                />

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="34dp"
                                android:textColor="#000"
                                android:text="Item Name"
                                android:textSize="14sp"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:text="200 PHP"
                                />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="114dp"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="6dp"
                        android:elevation="6dp"
                        android:layout_marginStart="15dp"
                        >
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="114dp"
                                />

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="34dp"
                                android:textColor="#000"
                                android:text="Item Name"
                                android:textSize="14sp"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:text="200 PHP"
                                />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="114dp"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="6dp"
                        android:elevation="6dp"
                        android:layout_marginStart="15dp"
                        >
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="114dp"
                                android:src="@drawable/item1"
                                />

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="34dp"
                                android:textColor="#000"
                                android:text="Item Name"
                                android:textSize="14sp"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:text="200 PHP"
                                />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>


                </LinearLayout>

            </HorizontalScrollView>


        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:id="@+id/navBar"
        android:background="@drawable/navbar"
        android:layout_height="48dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/home"
            android:background="none"
            android:layout_marginStart="60dp"
            android:layout_marginTop="10dp"
            />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/search"
            android:background="none"
            android:layout_marginStart="50dp"
            android:layout_marginTop="10dp"
            />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/cart"
            android:background="none"
            android:layout_marginStart="50dp"
            android:layout_marginTop="10dp"
            />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/profile"
            android:background="none"
            android:layout_marginStart="50dp"
            android:layout_marginTop="10dp"
            />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>


